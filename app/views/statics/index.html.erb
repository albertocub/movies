  <%= render "shared/boxsearchs" %>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-4"> 
        <div class="card" style="width:100%;">
          <img src="https://resizing.flixster.com/nQpr_LAyqR81PeN8b-mhZFtTUjU=/1100x480/v1.czsxMDI3NzM5ODtqOzE3Mzk4OzEyMDA7NTUwOzI0MA" alt="Avatar" style="width: 100%; height:300px;">
