<style>
.field {margin-top: 10px;}
</style>
<div class="estilosapp2">
    <!-- PARCIAL HEADER --> 
    <%= render "shared/header" %>
    <div class="container"> 
        <div class="controladorej2">
            <div class="box">
                <div class="alert"><i class="fa fa-th-large fa-1x color-blue"></i>&nbsp;Editar Pelicula</div> 
                <%= form_for(@pelicula) do |f| %>
                    <div class="field">
                        <%= f.text_field :name, placeholder: "Nombre", class:"form-control" %>
                    </div> 
                    <div class="field">
                        <%= f.text_field :director, placeholder: "Director", class:"form-control" %>
                    </div> 
                    <div class="field">
                        <%= f.text_field :actor, placeholder: "Actor", class:"form-control" %>
                    </div> 
                    <div class="field">
                        <%= f.text_field :email_contact, placeholder: "Email", class:"form-control" %>
                    </div>  
                    <div class="field">
                        <%= f.text_field :stars, placeholder: "Stars", class:"form-control" %>
                    </div> 
                    <div class="field">
                       <%= f.select :country, options_for_country, :prompt => 'Seleccionar el Pais', class:'form-control' %>
                    </div>   
                    <div class="field">
                        <%= f.text_field :year, placeholder: "AÃ±o", class:"form-control" %>
                    </div>     
                    <div class="field">
                       <%= f.select :genre, options_for_genre, :prompt => 'Seleccionar el genero', class:'form-control' %>
                    </div>  
                    <div class="field">
                        <%= f.text_field :precio, placeholder: "Precio", class:"form-control" %>
                    </div>      
                    <div class="field">
                        <%= f.text_field :url, placeholder: "URL Imagen", class:"form-control" %>
                    </div>      
                     <div class="field">
                        <%= f.text_field :movie_main, placeholder: "Video Principal Cabecera Sintaxis Link = https://www.youtube.com/embed/LINK_YOUTUBE", class:"form-control" %>
                    </div>  
                    <div class="field">
                        <%= f.submit "Guardar", class:"btn btn-sm btn-danger white pull-right", style:"margin-top: 15px;" %>
                    </div>
                <%end%>
                <%= link_to 'Listado de Peliculas', @pelicula, class:"btn btn-sm btn-primary nodecor", style:"margin-top: 15px;" %> 
                <br></br> 
                <ol>
                    <li>El nombre no puede estar vacio.</li>
                    <li>No permite guardar 2 nombres en la BD con el mismo nombre.</li>
                    <li>El apellido no puede estar vacio.</li>
                    <li>El email no puede estar vacio.</li>
                    <li>El email tiene que tener el formato standard con el signo @</li>
                </ol>  
                <hr/>
                <div class="margin20">
                    <%= @pelicula.errors.full_messages.each do |message| %>
                        <div class="message be-red white top-space text-center">
                            * <%= message %>
                        </div>
                    <%end%>
                </div> <!-- end margin20 -->    
            </div> <!-- end box -->
        </div> <!-- end controladorej2 -->
    </div> <!-- end container -->
</div> <!-- end estilosapp2 -->
<!-- PARCIAL FOOTER --> 
<%= render "shared/footer" %>