<style>
  .latest-movie {height:500px; margin: 2px; margin-top:10px;margin-bottom:10px;}
  .latest-movie-img {width:100%; height: 250px !important;}
  .latest-movie-img:hover {opacity: 0.7;}
  .latest-movie-content {width:100%;height:206px;padding:20px;}
  .latest-movie-content .title {width:100%;height:40px;text-shadow: 1px 1px 1px gray;}
  .latest-movie-content p {height:15px;}
  .latest-movie-btn .btn {margin:10px 0 17px;}
</style>
<!-- PARCIAL HEADER --> 
<%= render "shared/header" %>
<!-- PARCIAL BOX SEARCHS --> 
<%= render "shared/boxsearchs" %>   
<div class="estilosapp2">
  <div class="container">
    <div class="row">
      <% @peliculas.each do |peli|%>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
          <div class="latest-movie">
            <a href="#"><img src="<%= peli.url %>" class="img-responsive latest-movie-img"/></a>
            <div class="latest-movie-content">
              <h4 class="title"> <%= peli.name %></h4>
              <p><b>Director:</b> <%= peli.director %></p>
              <p><b>Actor Principal:</b> <%= peli.actor %></p>
              <p><b>AÃ±o:</b> <%= peli.year %></p>
              <p><b>Genero:</b> <%= peli.genre %></p>
              <p><b>Precio:</b> <%= peli.precio/100.0 %></p>
            </div><!-- end latest-movie-content -->
            <div class="latest-movie-btn">  
              <%= link_to select_plan_path(pelicula: peli.id, user: current_user), class: "btn btn-primary white center-block" do %>
                <i class="fa fa-search"></i> 
                <%= t('Comprar') %>
              <%end%>
            </div><!-- end latest-movie-btn -->
          </div> <!-- end latest-movie -->
        </div> <!-- end col -->
      <%end%>
    </div> <!-- end row-->
    <!-- <%=debug params %> -->
    <br/>
  </div> <!-- end estilosapp2 -->
</div> <!-- end container --> 
<!-- PARCIAL FOOTER --> 
<%= render "shared/footer" %>  