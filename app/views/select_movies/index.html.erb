<style>
  .latest-movie {padding:20px;margin-top:10px;}
  .latest-movie p {height:15px;}
  .latest-movie .title {height:40px; text-shadow: 1px 1px 1px gray;}
  .latest-movie .btn {margin-top:20px;}
</style>
<!-- PARCIAL HEADER --> 
<%= render "shared/header" %>
<!-- PARCIAL BOX SEARCHS --> 
<%= render "shared/boxsearchs" %>   
<div class="container">
  <div class="estilosapp2">
    <div class="row">
      <% @peliculas.each do |peli|%>
        <div class="col-lg-3 col-md-4 col-sm-6">
          <div class="latest-movie">
            <a href="#"><img src="<%= peli.url %>" class="img-responsive" style="width:100%; height: 245px;"></a></br>
            <h4 class="title"> <%= peli.name %></h4>
            <p><b>Director:</b> <%= peli.director %></p>
            <p><b>AÃ±o:</b> <%= peli.year %></p>
            <p><b>Genero:</b> <%= peli.genre %></p>
            <p><b>Precio:</b> <%= peli.precio/100.0 %></p>
            <%= link_to select_plan_path(pelicula: peli.id, user: current_user), class: "btn btn-primary white center-block" do %>
              <i class="fa fa-search"></i> 
              <%= t('Comprar') %>
            <%end%>
          </div> <!-- end latest-movie -->
        </div> <!-- end col -->
      <%end%>
    </div> <!-- end row-->
  <!-- <%=debug params %> -->
  <br/>
  <!-- PARCIAL FOOTER --> 
  <%= render "shared/footer" %>
</div> <!-- end container -->

 
  