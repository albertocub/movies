<!-- PARCIAL HEADER --> 
<%= render "shared/header" %>
<%if flash.present?%>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-md-offset-3" style="padding:25px 0">
            <%= render partial: "shared/flash_messages", flash: flash %>
        </div>
    </div>
<%end%>

<div class="row">
    <div class="controladorej2" style="margin-left: auto !important; margin-right: auto !important; width:84% !important;">
        <div class="box">
            <div class="alert"><i class="fa fa-th-large fa-1x color-blue"></i>&nbsp;Settings Edit</div> 
                <div class="center-content"> 
                    <%= form_for(@setting) do |f| %>
                        <div class="field">
                        	<%= f.label "Country" %>		
                            <%= f.select :country, options_for_country, :prompt => 'Select One', :class => "form-control" %>
                        </div> 
                        <div class="field">
                        	<%= f.label "Language" %>		
                            <%= f.text_field :language, placeholder: "Language", class:"form-control size14" %>
                        </div>  
                        <div class="field">
                            <%= f.submit "Guardar", class:"btn btn-sm btn-danger white pull-right", style:"margin-top: 15px;" %>
                        </div>
                    <%end%>
                </div><!-- center-content -->
            <%= link_to 'Back', settings_path, class:"btn btn-sm btn-primary nodecor", style:"margin-top: 15px;" %> 
            <br></br> 
        </div><!-- end box -->
    </div><!-- end controladorej2 -->
</div><!-- row -->